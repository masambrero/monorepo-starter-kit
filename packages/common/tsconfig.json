{
  "extends": "tsconfig/react-lib.json",
  "include": ["./src"],
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {
      "~*": ["./src/*"]
    },
    "types": ["unplugin-icons/types/react", "node"],
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  }
}
